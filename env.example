# Database Configuration
# Replace with your SQL Server instance details
DB_SERVER=localhost\SQLEXPRESS
DB_DATABASE=your_database_name
DB_USERNAME=
DB_PASSWORD=
DB_DRIVER=ODBC Driver 17 for SQL Server

# OpenAI Configuration
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# MCP Server Configuration
MCP_SERVER_NAME=natural-language-sql-server

# Security Configuration
# Start in SELECT-only mode (read-only operations only)
SELECT_ONLY_MODE=false

# Allow clients to toggle between SELECT-only and full access modes
ALLOW_MODE_TOGGLE=true

# Optional: Enable debug logging
# LOG_LEVEL=DEBUG 